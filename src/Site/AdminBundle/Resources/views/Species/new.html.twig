{% extends "AdminBundle:Layouts:master.html.twig" %}

{% form_theme form "BaseBundle:Form:form_layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col2">
                {{ include("AdminBundle:Layouts:side-nav.html.twig") }}

            </div>
            <div class="col10">
                <h1>Gestion des espèces</h1>
            </div>
        </div>
        <div class="row">
            <div class="col2">
                <ul class="side-nav">
                    <li><a href="{{ path("admin_species_homepage") }}" >Liste des espèces</a></li>
                    <li><a href="{{ path("admin_species_new") }}" >Ajouter une espèce</a></li>
                </ul>
            </div>
            <div class="col10">
                <h2>Gestion des espèces - Ajouter une espèce</h2>

                <form class="hform" action="{{ path("admin_species_create") }}" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <div class="form-row">
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" formnovalidate>Créer</button>
                            <button type="button" class="btn">Annuler</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
