{% extends "AdminBundle:Layouts:master.html.twig" %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col2">
                {{ include("AdminBundle:Layouts:side-nav.html.twig") }}

            </div>
            <div class="col10">
                <h1>Gestion des utilisateurs</h1>
            </div>
        </div>
        <div class="row">
            <div class="col2">
                <ul class="side-nav">
                    <li><a href="{{ path("admin_user_homepage") }}" >Liste des utilisateurs</a></li>
                    <li><a href="{{ path("admin_user_new") }}" >Ajouter un utilisateur</a></li>
                </ul>
            </div>
            <div class="col10">
                <h2>Liste des utilisateurs</h2>
                {% if users|length > 0 %}
                <table>
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
                {% else %}
                    <p class="msg simple-inverse">Il n'y a pas d'utilisateur enregistré dans la base de données.</p>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
