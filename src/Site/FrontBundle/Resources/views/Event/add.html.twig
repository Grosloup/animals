{% extends "FrontBundle:Layouts:stylesAndLibs.html.twig" %}
{% block headlinks %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/ui/jquery-ui-1.10.3.custom.min.css">
{% endblock %}

{% form_theme form "BaseBundle:Form:form_layout.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
        <div class="col2">
            

        </div>
        <div class="col10">
                //TODO quick search
        </div>
    </div>

        <div class="row">
            <div class="col2">
                {{ include("FrontBundle:Layouts:side-nav.html.twig") }}
                <ul class="side-nav">
                    <li><a href="{{ path("front_animal_homepage") }}">Liste des animaux</a></li>
                    <li><a href="">Liste des espèces</a></li>
                </ul>

            </div>
            <div class="col10">
                <h2>Ajouter un événement pour {{animal.name}}</h2>

                <form class="hform" action="{{ path("front_event_create_add") }}" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    
                    <div class="form-row">
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" formnovalidate>Créer</button>
                            <button type="button" class="btn">Annuler</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>



{% endblock %}

{% block footscripts %}
    {{ parent() }}
    <script type="text/javascript" src="/js/vendor/jQuery/jquery-ui-1.10.3.custom.min.js"></script>
    <script type="text/javascript" src="/js/vendor/jQuery/i18n/jquery.ui.datepicker-fr.js"></script>
    <script type="text/javascript">
        $(function(){
            $.datepicker.setDefaults( $.datepicker.regional[ "fr" ] );
            $("#event_form_date").datepicker({
                changeMonth: true,
                changeYear: true,
                minDate: new Date(1970,0,1)
            });
        });
    </script>
{% endblock %}
